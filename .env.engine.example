# Engine diagnostics and runtime behavior
# Copy to .env.engine

# Runtime
ENGINE_RUNTIME_GAME_NAME=warships
ENGINE_LOG_LEVEL=DEBUG
ENGINE_WINDOW_MODE=windowed
ENGINE_UI_ASPECT_MODE=stretch

# Metrics and UI overlay
ENGINE_METRICS_ENABLED=1
ENGINE_UI_OVERLAY_ENABLED=1

# Profiling
ENGINE_PROFILING_ENABLED=1
ENGINE_PROFILING_SAMPLING_N=1

# Input tracing (high-volume; enable only for focused input debugging)
ENGINE_INPUT_TRACE_ENABLED=1

# Diagnostics core (engine-owned, tooling-consumable)
ENGINE_DIAGNOSTICS_ENABLED=1
ENGINE_DIAGNOSTICS_BUFFER_CAP=20000

# Diagnostics crash bundles
ENGINE_DIAGNOSTICS_CRASH_ENABLED=1
ENGINE_DIAGNOSTICS_CRASH_DIR=tools/data/crash
ENGINE_DIAGNOSTICS_CRASH_RECENT_EVENTS=1000

# Diagnostics profiling spans
# off|light|timeline|timeline_sample
ENGINE_DIAGNOSTICS_PROFILING_MODE=timeline
ENGINE_DIAGNOSTICS_PROFILING_SAMPLING_N=1
ENGINE_DIAGNOSTICS_PROFILING_SPAN_CAP=20000
ENGINE_DIAGNOSTICS_PROFILING_EXPORT_DIR=tools/data/profiles

# Diagnostics replay
ENGINE_DIAGNOSTICS_REPLAY_ENABLED=1
ENGINE_DIAGNOSTICS_REPLAY_EXPORT_DIR=tools/data/replay
ENGINE_DIAGNOSTICS_REPLAY_HASH_INTERVAL=1

# Diagnostics render-stage telemetry throttles
ENGINE_DIAGNOSTICS_RENDER_STAGE_EVENTS_ENABLED=1
ENGINE_DIAGNOSTICS_RENDER_STAGE_SAMPLING_N=1
ENGINE_DIAGNOSTICS_RENDER_PROFILE_SAMPLING_N=1

# Live diagnostics HTTP endpoints used by engine_monitor.
ENGINE_DIAGNOSTICS_HTTP_ENABLED=1
ENGINE_DIAGNOSTICS_HTTP_HOST=127.0.0.1
ENGINE_DIAGNOSTICS_HTTP_PORT=8765

# Monitor-side remote polling throttles.
ENGINE_MONITOR_REMOTE_SNAPSHOT_LIMIT=5000
ENGINE_MONITOR_REMOTE_PROFILING_LIMIT=5000
ENGINE_MONITOR_REMOTE_HEAVY_POLL_EVERY=1

# Render loop mode
# on_demand|continuous
ENGINE_RENDER_LOOP_MODE=continuous
# 0 disables cap, otherwise target FPS for non-blocking pacing
ENGINE_RENDER_FPS_CAP=10000
# 1 = present-synced to monitor refresh, 0 = unsynced
ENGINE_RENDER_VSYNC=0
