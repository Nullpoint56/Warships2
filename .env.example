# Debug switches
# 1 = enabled, 0 = disabled
WARSHIPS_DEBUG_INPUT=0
WARSHIPS_DEBUG_UI=0

# Logging
# LOG_FORMAT: json|text
# LOG_LEVEL: DEBUG|INFO|WARNING|ERROR
LOG_FORMAT=json
LOG_LEVEL=INFO

# UI viewport scaling
# contain = preserve 1200x720 aspect (recommended), stretch = fill full window with non-uniform scaling
WARSHIPS_UI_ASPECT_MODE=contain

# Window mode at launch (GLFW backend)
# fullscreen = exclusive fullscreen on primary monitor
# borderless = monitor workarea without window frame
# maximized = maximized window
WARSHIPS_WINDOW_MODE=fullscreen
